{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test without coverage",
            "type": "shell",
            "problemMatcher": [],
            "command": "python3 -m pytest"
        },
        {
            "label": "lint",
            "type": "shell",
            "problemMatcher": [],
            "command": "python3 -m pylint --fail-under=10 `find -regextype egrep -regex '(.*.py)$'`"
        },
        {
            "label": "test with coverage",
            "type": "shell",
            "problemMatcher": [],
            "command": "python3 -m coverage run --source=. -m pytest && python3 -m coverage report --fail-under 100 -m"
        },
        {
            "label": "build package",
            "type": "shell",
            "problemMatcher": [],
            "command": "python3 -m build --out dist/"
        }
    ]
}